<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/labelInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o texto da etiqueta"
        android:inputType="text" />

    <EditText
        android:id="@+id/barcodeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o cÃ³digo de barras (opcional)"
        android:inputType="text" />

    <Button
        android:id="@+id/btnEnableBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ativar Bluetooth" />

    <Button
        android:id="@+id/btnDiscoverDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descobrir Dispositivos" />

    <Button
        android:id="@+id/btnPrintLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imprimir Etiqueta" />

    <ListView
        android:id="@+id/devicesListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>